generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("CONNECTION_POOL_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["auth", "public"]
}

model Participant {
  id             String  @id @default(uuid())
  name           String
  Vote           Vote[]
  eventId        String?
  Event          Event[] @relation("event_participants")
  organizedEvent Event[]

  @@schema("public")
}

model Event {
  id           String        @id @default(uuid())
  title        String
  description  String?
  date         DateTime
  time         String?
  location     String?
  organizer    Participant   @relation(fields: [organizerId], references: [id])
  organizerId  String
  participants Participant[] @relation("event_participants")
  votes        Vote[]

  @@schema("public")
}

model Vote {
  id            String      @id @default(uuid())
  participant   Participant @relation(fields: [participantId], references: [id])
  participantId String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  content       Json
  Event         Event       @relation(fields: [eventId], references: [id])
  eventId       String

  @@schema("public")
}
